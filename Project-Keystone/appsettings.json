{
  "ConnectionStrings": {
    "DefaultConnectionString": "Data Source=localhost\\sqlexpress;Initial Catalog=ProjectKeystone;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },
  "Jwt": {
    "Key": "super-secret-key",
    "Issuer": "YourIssuerHere",
    "Audience": "YourAudienceHere",
    "Subject": "YourSubjectHere"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Infrastructure/Logging/logs.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ssfff zzz} {SourceContext} {level}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": null,
          "fileSizeLimitBytes": null
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
